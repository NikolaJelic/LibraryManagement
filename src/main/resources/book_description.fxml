<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="rootPane" prefHeight="400.0" prefWidth="600.0" stylesheets="@book-info.css"
            xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="libraryManagement.ui.book.BookDescription">
    <children>
        <VBox alignment="BOTTOM_CENTER" layoutX="238.0" layoutY="90.0" prefHeight="400.0" prefWidth="600.0"
              AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0">
            <children>
                <TextField fx:id="descriptionBox" alignment="TOP_LEFT" prefHeight="325.0" prefWidth="600.0">
                    <font>
                        <Font name="Times New Roman" size="15.0"/>
                    </font>
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                    </padding>
                    <VBox.margin>
                        <Insets bottom="5.0" left="20.0" right="20.0" top="20.0"/>
                    </VBox.margin>
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                </TextField>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <Button fx:id="submitButton" mnemonicParsing="false" onAction="#saveDescription" text="Submit"
                                textAlignment="CENTER">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Button>
                    </children>
                </HBox>
            </children>
      </VBox>
   </children>
</AnchorPane>
